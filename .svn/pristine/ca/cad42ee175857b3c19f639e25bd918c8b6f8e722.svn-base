<!-- ========================================= MAIN ========================================= -->
<main id="authentication" class="inner-bottom-md">
    <div class="container">
        <div class="row">

            <div class="col-md-6 col-sm-12">
                <section class="section sign-in inner-right-xs">
                    <h2 class="bordered">@ViewBag.Title</h2>

                    <div>
                        <p>
                            Your password has been reset. Please @Html.ActionLink("click here to log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
                        </p>
                    </div>

                </section><!-- /.sign-in -->
            </div><!-- /.col -->

            <div class="col-md-6 col-sm-12" style="max-height: 600px;">
                <div class="ask-register hidden-sm hidden-xs">
                    <img src="~/Content/Images/BG/AskRegister.png" />
                </div>
                <h2 class="semi-bold">Sign up today and you'll be able to :</h2>

                <ul class="list-unstyled list-benefits">
                    <li><i class="fa fa-check primary-color"></i> Speed your way through the checkout</li>
                    <li><i class="fa fa-check primary-color"></i> Track your orders easily</li>
                    <li><i class="fa fa-check primary-color"></i> Keep a record of all your purchases</li>
                </ul>
            </div><!-- /.buttons-holder -->

        </div><!-- /.col -->

    </div><!-- /.row -->
    </div><!-- /.container -->
</main><!-- /.authentication -->
<!-- ========================================= MAIN : END ========================================= -->