<!-- ============================================================= HEADER ============================================================= -->
@model OtakuStore.ViewModels.WebsiteAttributeViewModel

<header>
    <div class="container no-padding" id="searchMain">
        <div class="col-xs-12 col-sm-12 col-md-4 logo-holder">
            <!-- ============================================================= LOGO ============================================================= -->
            <div class="logo">
                <a href="\Home\Index">
                    <img src="@Model.websiteAttribute.logo" />
                </a>
            </div><!-- /.logo -->
            <!-- ============================================================= LOGO : END ============================================================= -->
        </div><!-- /.logo-holder -->

        <div class="col-xs-12 col-sm-12 col-md-5 top-search-holder no-margin">
            <div class="contact-row">
                <div class="phone inline">
                    <i class="fa fa-phone"></i> <a href="#">0909217723</a>
                </div>
                <div class="contact inline">
                    <i class="fa fa-envelope"></i> contact<span class="le-color">&nbsp; <a href="#">@Model.websiteAttribute.email</a></span>
                </div>
            </div><!-- /.contact-row -->
            <!-- ============================================================= SEARCH AREA ============================================================= -->
            <div class="search-area">
                <form method="get" action="/Home/Search">
                    <div class="control-group">
                        <input type="text" class="search-field" placeholder="Search for item" id="searchValue" name="keyword" />

                        <ul class="categories-filter animate-dropdown">
                            <li class="dropdown">

                                <a class="dropdown-toggle" data-toggle="dropdown" href="category-grid.html">all categories</a>

                                <ul class="dropdown-menu" role="menu">
                                    <li role="presentation"><a role="menuitem" tabindex="-1" href="category-grid.html">anime</a></li>
                                    <li role="presentation"><a role="menuitem" tabindex="-1" href="category-grid.html">tag</a></li>
                                    <li role="presentation"><a role="menuitem" tabindex="-1" href="category-grid.html">figure</a></li>
                                    

                                </ul>
                            </li>
                        </ul>

                        <button class="search-button" type="submit"></button>

                    </div>
                </form>
            </div><!-- /.search-area -->
            <!-- ============================================================= SEARCH AREA : END ============================================================= -->
        </div><!-- /.top-search-holder -->

        <div class="col-xs-12 col-sm-12 col-md-3 top-cart-row no-margin">
            <div class="top-cart-row-container">
                <div class="wishlist-compare-holder">
                    <div class="wishlist ">
                        <a href="/Product/viewWishList"><i class="fa fa-heart"></i> wishlist <span class="value">(@Html.Action("WishList", "Home"))</span> </a>
                    </div>
                    <div class="compare">
                        <a href="#"><i class="fa fa-exchange"></i> compare <span class="value">(2)</span> </a>
                    </div>
                </div>

                <!-- ============================================================= SHOPPING CART DROPDOWN ============================================================= -->
                <div class="top-cart-holder dropdown animate-dropdown">
                    <div class="basket">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            @Html.Action("CartPartial", "Cart")
                        </a>

                        <ul class="dropdown-menu">
                            @{var img = Session["image"] as List<Data.Image>;}
                            @{var cart = Session["cart"] as List<Data.OrderProduct>;}
                            @if (cart.Any())
                            {
                                <li style="max-height:300px; overflow:auto;">
                                    @foreach (var item in Session["cart"] as List<Data.OrderProduct>)
                                    {
                                        <div class="basket-item">
                                            <div class="row">
                                                <div class="col-xs-4 col-sm-4 no-margin text-center">
                                                    <div class="thumb">
                                                        <img style="width:80px; height:80px" alt="" src="@img.Where(i => i.ProductID == item.ProductID).First().Link" />
                                                    </div>
                                                </div>
                                                <div class="col-xs-8 col-sm-8 no-margin">
                                                    <div class="title limit-text" style="height:66px; overflow:hidden; color:blue; font-size:15px; line-height:15px;"> <b>@item.Name</b></div>
                                                    <div class="price" style="height:10px;">$@item.Price</div>
                                                </div>
                                            </div>
                                            @*<a class="close-btn" href="#"></a>*@

                                        </div>
                                    }
                                </li>
                            }
                            else
                            {
                                <li style="max-height:300px; overflow:auto;">
                                    <div class="basket-item">
                                        <div class="row" style="text-align: center;">
                                            <img src="~/Content/Images/cart-empty.png" alt=""/><br />
                                            Không có sản phẩm nào trong giỏ hàng của bạn.<br /><br />
                                        </div>
                                    </div>
                                </li>
                            }


                            <li class="checkout">
                                <div class="basket-item">
                                    <div class="row" style="display:flex;">
                                        <div class="col-xs-12 col-sm-6" style="margin:auto; text-align:center">
                                            <a href="/Cart/viewCart/" class="le-button inverse">View cart</a>
                                        </div>
                                        @if (cart.Count > 0)
                                        {
                                            <div class="col-xs-12 col-sm-6" style="margin:auto; text-align:center">
                                                <a href="/Cart/checkOut" class="le-button">Checkout</a>
                                            </div>
                                        }

                                    </div>
                                </div>
                            </li>

                        </ul>
                    </div><!-- /.basket -->
                </div><!-- /.top-cart-holder -->
            </div><!-- /.top-cart-row-container -->
            <!-- ============================================================= SHOPPING CART DROPDOWN : END ============================================================= -->
        </div><!-- /.top-cart-row -->
    </div><!-- /.container -->
</header>
<!-- ============================================================= HEADER : END ============================================================= -->